<form class="login-form">
  <div>
    <label class="text-uppercase" for="email-login">email:</label>
    <input type="text" id="email-login" />
  </div>
  <div>
    <label class="text-uppercase" for="password-login">password:</label>
    <input type="password" id="password-login" />
  </div>
  <div>
    <button type="submit">login</button>
  </div>
</form>
<h4 class="text-uppercase">Or</h4>
<button type="button" data-toggle="modal" data-target="#myModal">signup</button>
<!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <form class="signup-form">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Signup</h4>
          </div>
          <div class="modal-body">
            <div>
              <label class="text-uppercase" for="username-signup">username:</label>
              <input type="text" id="username-signup" />
            </div>
            <div>
              <label class="text-uppercase" for="email-signup">email:</label>
              <input type="text" id="email-signup" />
            </div>
            <div>
              <label class="text-uppercase" for="password-signup">password:</label>
              <input type="password" id="password-signup" />
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit">signup</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </form>
    </div>
  </div>
<script src="/javascript/login.js"></script>